<% if !flash.empty? %>
  <div class="alert alert-danger">
    <ul class="custom-list" style="display: inline-block">
      <% flash.each do |key, value| %>
        <li ><%= value %></li>
      <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>