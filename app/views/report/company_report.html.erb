<div class="row">
  <form action="company_report" method="get">
    <div class="col-md-4">
      <select id="capital_increase_id" name="id" class="form-control main_select2">
        <% @capital_increases.each do |c| %>
          <option value="<%= c.id %>"><%= c.identity.self_detail.name_zh %> / <%= c.stock_class %> / <%= c.date_issued %></option>
        <% end %>
      </select>
    </div>
    
    <div class="col-md-3">
      <div class="input-group date" id="report_datetimepicker1">
        <input type="text" id="start_time" name="start_time" class="form-control" />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <span class="help-block no-margin-bottom">開始</span>
    </div>
    
    
    <div class="col-md-3">
      <div class="input-group date" id="report_datetimepicker2">
        <input type="text" id="end_time" name="end_time" class="form-control" />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <span class="help-block no-margin-bottom">結束</span>
    </div>
      
    <div class="col-md-2">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button>
    </div>
  </form>
</div>

<div class="row">
  <h3><strong>已完成交易股東</strong></h3>
  <table class="table table-hover text-center">
    <thead>
      <tr>
     	  <th class="text-center">姓名</th>
     	  <th class="text-center">股數</th>
        <th class="text-center">占比</th>
        <th class="text-center">股票類型</th>
        <th class="text-center">狀態</th>
      </tr>
    </thead>
    <tbody>
      <% @complete_tuple.each do |t| %>
        <tr>
          <td><%= t[:name_zh] %></td>
     	    <td><%= t[:stock_num] %></td>
     	    <td><%= t[:percentage] %></td>
     	    <td><%= t[:stock_class] %></td>
     	    <td><strong><font color="green">已完成</font></strong></td>
   	    </tr>
   	  <% end %>
    </tbody>
  </table>
</div>

<div class="row"> 
  <h3><strong>未完成交易股東</strong></h3>
  <table class="table table-hover text-center">
    <thead>
      <tr>
     	  <th class="text-center">姓名</th>
     	  <th class="text-center">股數</th>
        <th class="text-center">占比</th>
        <th class="text-center">股票類型</th>
        <th class="text-center">狀態</th>
      </tr>
    </thead>
    <tbody>
      <% @ongoing_tuple.each do |t| %>
        <tr>
          <td><%= t[:name_zh] %></td>
     	    <td><%= t[:stock_num] %></td>
     	    <td><%= t[:percentage] %></td>
     	    <td><%= t[:stock_class] %></td>
     	    <td><strong><font color="red">未完成</font></strong></td>
   	    </tr>
   	  <% end %>
    </tbody>
  </table>
</div>

<div class="row" style="text-align: right">
  <%= link_to "報表下載", url_for(params.merge(:format => :csv)), {class: "btn btn-primary col-md-12"} %>
</div>
