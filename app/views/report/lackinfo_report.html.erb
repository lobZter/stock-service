<div class="row">
  <form action="lackinfo_report" method="get">
    <div class="col-md-4">
      <select name="id" class="form-control main_select2">
        <% @companies.each do |c| %>
          <option value="<%= c.id %>"><%= c.name_zh %></option>
        <% end %>
      </select>
    </div>
    
    <div class="col-md-2">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      </button>
    </div>
  </form>
</div>

<h1><strong>
  <%= link_to @company.name_zh, url_for(params.merge(:format => :xlsx)) %>
</strong></h1>

<div class="row">
  <div class="well">
    <table class="table table-hover text-center">
      <thead>
        <tr>
       	  <th class="text-center">中文名字</th>
       	  <th class="text-center">投資金額/幣別</th>
       	  <th class="text-center">每股面額/幣別	</th>
       	  <th class="text-center">股數</th>
       	  <th class="text-center">英文名字</th>
       	  <th class="text-center">護照號碼</th>
       	  <th class="text-center">國籍</th>
          <th class="text-center">中文地址</th>
          <th class="text-center">英文地址</th>
          <th class="text-center">email</th>
          <th class="text-center">護照影本</th>
          <th class="text-center">簽名頁影本</th>
          <th class="text-center">郵寄地址影本</th>
          <th class="text-center">意向書</th>
       	  <th class="text-center">Regular S</th>
          <th class="text-center">USD合約</th>
          <th class="text-center">RMB合約</th>
          <th class="text-center">購買協議</th>
          <th class="text-center">W8BEN</th>
          <th class="text-center">換股協議</th>
          <th class="text-center">聲明書</th>
          <th class="text-center">銀行水單</th>
        </tr>
      </thead>
      <tbody>
        <% @report.each do |r| %>
          <tr data-link="<%= edit_transaction_path(r[:transaction_id]) %>" class="tr-clickable">
            <td><strong><%= r[:name_zh] %></strong></td>
            <td><%= r[:fund] %></td>
            <td><%= r[:stock_price] %></td>
            <td><%= r[:stock_num] %></td>
            <td><%= to_icon(r[:name_en]) %></td>
            <td><%= to_icon(r[:passport]) %></td>
            <td><%= to_icon(r[:country]) %></td>
            <td><%= to_icon(r[:address_zh]) %></td>
            <td><%= to_icon(r[:address_en]) %></td>
            <td><%= to_icon(r[:email]) %></td>
            <td><%= to_icon(r[:copy_passport]) %></td>
            <td><%= to_icon(r[:copy_signature]) %></td>
            <td><%= to_icon(r[:copy_mail_addr]) %></td>
            
            <td><%= to_icon(r[:contract_0]) %></td>
            <td><%= to_icon(r[:contract_1]) %></td>
            <td><%= to_icon(r[:contract_2]) %></td>
            <td><%= to_icon(r[:contract_3]) %></td>
            <td><%= to_icon(r[:contract_4]) %></td>
            <td><%= to_icon(r[:contract_5]) %></td>
            <td><%= to_icon(r[:contract_6]) %></td>
            <td><%= to_icon(r[:contract_7]) %></td>
            <td><%= to_icon(r[:contract_8]) %></td>
     	    </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag('lacking_report.js') %>